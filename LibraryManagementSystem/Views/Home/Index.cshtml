@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome to Library Management System</h1>
        <p class="lead">Your one-stop solution for managing library resources efficiently</p>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Book Management</h5>
                    <p class="card-text">Browse, add, edit, and manage your library's book collection with ease.</p>
                    <a asp-controller="Books" asp-action="Index" class="btn btn-primary">Manage Books</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Member Management</h5>
                    <p class="card-text">Add, view, edit, and delete member records.</p>
                    <a asp-controller="Members" asp-action="Index" class="btn btn-primary">Manage Members</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Loan Management</h5>
                    <p class="card-text">Track, add, edit, and return book loans.</p>
                    <a asp-controller="Loans" asp-action="Index" class="btn btn-primary">Manage Loans</a>
                </div>
            </div>
        </div>
    </div>
</div>
